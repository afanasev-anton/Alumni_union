{% extends 'base.html.twig' %}

{% block title %}Home | Alumni Association of the {{school}}{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-3 mb-5">Hello</h1>

    {% if posts|length > 0 %}
        {% for post in posts %}
            <div class="card col-md-10">
                <div class="card-title h2 text-center mt-3">{{ post.title }}</div>
                <div class="card-body">
                    <span>Created by {{ post.author }}</span>
                    {% for tag in post.tags %}
                    <span class="badge badge-pill badge-warning">{{ tag.name }}</span>
                    {% endfor %}
                    <p>{{ post.content }}</p>  
                </div>
            </div>
        {% endfor %}
        {% else %}
        There are no Posts
    {% endif %}
{% endblock %}
