{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-3 mb-5">Hello</h1>

    {% if posts|length > 0 %}
        {% for post in posts %}
            <div class="card col-md-10">
                <div class="card-title h2 text-center mt-3">{{ post.title }}</div>
                <div class="card-body">
                    <p>Created by {{ post.author }}</p>
                    <p>{{ post.content }}</p>  
                </div>
            </div>
        {% endfor %}
        {% else %}
        There are no Posts
    {% endif %}
{% endblock %}
