{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-3 mb-5">Hello</h1>

    {% if posts|length > 0 %}
        {% for post in posts %}
            <div class="card col-md-10">
                <div class="card-title h2 text-center mt-3">{{ post.title }}</div>
                <div class="card-body">
                    <div class="row mb-3">
                        <span class='mr-3'>Created by {{ post.author }}</span>
                        {% for tag in post.tags %}
                        <span class="badge badge-pill badge-warning">{{ tag.name }}</span>
                        {% endfor %}
                        <span class='ml-auto'> {{ post.createdAt | date('j. F Y H:m')}} </span>
                    </div>
                    <p>{{ post.content }}</p>  
                </div>
            </div>
        {% endfor %}
        {% else %}
        There are no Posts
    {% endif %}
{% endblock %}
