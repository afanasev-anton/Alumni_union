{% extends 'base.html.twig' %}

{% block title %}Home | Alumni Association of the {{school}}{% endblock %}

{% block body %}
    <div class="row p-3">
        <div class="w-100 card bg-light p-2">
            <h5 class="card-title text-center">Welcome to the PASF Alumni Association webpage!</h5>
            <br>
            <p class="card-text text-center">Here you can find news about the exciting events that we organize, interesting successfull stories of our students and even job opportunities! <br>Log in to discover what we can do for you or just visit our pages to stay updated.</p>
        </div>
    </div>
    
    <div class="row p-3 appear">
        {# PLACE FOR STORIES #}
        <div class="col-12 col-sm-6 col-md-4 p-2">            
            {% if posts|length > 1 %}
                {% for post in posts|slice(0, 2) %}
                    {# START of Cards #}
                    {{ include('inc/card_post.html.twig') }}
                    {# END #}
                {% endfor %}
            {% else %}
                {# If there is not enought posts there would be the banner #}
                <div class="card event">
                    <img class="card-img-top" src="{{asset('img/event1.jpg')}}" alt="Card image">
                </div>
            {% endif %}
        </div>
        {# CENTRAL COLUMN WITH STATIC CONTENT #}
        <div class="col-md-4 p-2 d-none d-md-block">
            {# MOTTO Part #}
            <div class="card text-white text-center alumni p-2 mb-2" style="background-color:#3CB521;" >
                <blockquote class="blockquote mb-0">
                    <p>Everybody can code!</p>
                    <footer class="blockquote-footer">
                        <small>  motto of the school  </small>
                    </footer>
                </blockquote>
            </div>
            {# LOGO Part #}
            <div class="card mb-2">
                <img class="card-img-top" src="{{asset('img/AlumniLogoTras.png')}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Discover more about our Association!</h5>
                    <p class="card-text">Do you know what PASF stands for?</p>
                </div>
            </div>
            {# Headline Part #}
            <div class="card text-white text-center alumni p-2" style="background-color: #3CB521;" >
                <blockquote class="blockquote mb-0">
                    <p>Shoot for the moon. Even if you miss, you'll land among the stars.</p>
                    <footer class="blockquote-footer">
                        <small>  One of our students  </small>
                    </footer>
                </blockquote>
            </div>
        </div>        
        {# PLACE FOR EVENTS #}
        <div class="col-12 col-sm-6 col-md-4 p-2">
            {% if posts|length > 3 %}
                {% for post in posts|slice(2, 2) %}
                    {# START #}
                    {{ include('inc/card_post.html.twig') }}
                    {# END #}
                {% endfor %}
            {% else %}
                {# If there is not enought posts there would be the banner #}
                <div class="card event">
                    <img class="card-img-top" src="{{asset('img/event2.jpg')}}" alt="Card image">
                </div>
            {% endif %}

        </div>
    </div>

